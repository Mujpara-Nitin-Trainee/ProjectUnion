<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registeration Page</title>

    <link rel="stylesheet" href="/CSS/style.css" />
  </head>
  <body>
    <div class="Wrapper">
      <div class="container">
        <h3>Register Here</h3>
        <div class="row">
          <div class="col">
            <div class="form-img">
              <img src="/Assets/Designer _Flatline 1.png" alt="Img1" />
            </div>
          </div>

          <div class="col">
            <div class="form-wrapper">
              <form
                id="form"
                name="form"
                action="/api/user/register"
                method="POST"
                onsubmit="return validateRegister()"
              >
                <% if(message) { %> 
                  <script>alert('<%= message %>')</script>
                <% } %>

                <div class="form-handler">
                  <div class="form-label">
                    <label for="username">Username</label>
                  </div>
                  <div class="form-input">
                    <input type="text" name="username" placeholder="Enter UserName" id="username" tabindex="0"/>
                  </div>
                  <span class="error" name="user_error" id="user_error"></span>
                </div>

                <div class="form-handler">
                  <div class="form-label">
                    <label for="email">Email</label>
                  </div>
                  <div class="form-input">
                    <input type="text" name="email" placeholder="Enter Email Id" id="email" tabindex="1" />
                  </div>
                  <span
                    class="error"
                    name="email_error"
                    id="email_error"
                  ></span>
                </div>

                <div class="form-handler">
                  <div class="form-label">
                    <label for="mobileno">Mobile Number</label>
                  </div>
                  <div class="form-input">
                    <input type="text" name="mobileno" placeholder="Enter Mobile No" id="mobileno" tabindex="2" />
                  </div>
                  <span
                    class="error"
                    name="mobileno_error"
                    id="mobileno_error"
                  ></span>
                </div>

                <div class="form-handler">
                  <div class="form-label">
                    <label for="dob">Date Of Birth</label>
                  </div>
                  <div class="form-input">
                    <input type="text" name="dob" placeholder="Enter Date of Birth" id="dob" tabindex="3" />
                  </div>
                  <span class="error" name="dob_error" id="dob_error"></span>
                </div>

                <div class="form-handler">
                  <div class="form-label">
                    <label for="address">Address</label>
                  </div>
                  <div class="form-input">
                    <input type="text" name="address" placeholder="Enter Address" id="address" tabindex="4"/>
                  </div>
                  <span
                    class="error"
                    name="address_error"
                    id="address_error"
                  ></span>
                </div>

                <div class="form-handler">
                  <div class="form-label">
                    <label for="country">Country</label>
                  </div>
                  <div class="form-input">
                    <select name="country" id="country">
                      <option>Select Any Country</option>
                      <option>Antarctica</option>
                      <option>Canada</option>
                      <option>Denmark</option>
                      <option>India</option>
                      <option>Japan</option>
                      <option>United Kingdom</option>
                      <option>United States</option>
                    </select>
                  </div>
                  <span
                    class="error"
                    name="country_error"
                    id="country_error"
                  ></span>
                </div>

                <div class="form-btn">
                  <input
                    type="submit"
                    value="submit"
                    name="submit"
                    id="submit"
                  />
                  <input type="reset" value="reset" name="reset" id="reset" />
                </div>
              </form>
              <div class="form-links external">
                <p> <span class="link-head">Already Member?</span> <a href="/api/user/login"> SignIn</a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/JS/validateRegister.js"></script>
  </body>
</html>
