<!DOCTYPE html>
<html>

<head>
    <title> Comments Page</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            background-color: rgb(172, 156, 156);
        }

        .container {
            max-width: 1170px;
            margin: 0 auto;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .col {
            width: calc(100%/1);
            margin-top: 30px;
        }

        .col span {
            font-weight: 600;
        }

        .search {
            float: right;
            margin-right: 10px;
        }

        table {
            border: 2px solid black;
            border-collapse: collapse;
            margin-bottom: 40px;
        }

        th {
            background-color: rgb(245, 101, 49);
        }

        tr,
        td,
        th {
            border: 3px solid black;
        }

        tr:nth-child(odd) {
            background-color: rgb(233, 124, 84);
        }

        tr:nth-child(even) {
            background-color: rgb(250, 158, 124);
        }

        .btn-container {
            display: inline-flex;
            align-items: center;
            margin-left: 400px;
        }

        .btn-container button {
            margin: 15px;
            padding: 10px;
        }

        #main {
            background-color: rgb(220, 228, 226);
            padding: 5px;
        }

    </style>
</head>

<body>
    <div class="container">
        <h2>Nitin Mujpara 24DEV084 11/03/2024</h2>
        <h4>Paggination in Fronted Side</h4>
        <div class="row">
            <div class="col">
               <span>UserId Post's Comments :-     <b><%= id %></b></span>
                <table>
                    <tr>
                        <th>USERID</th>
                        <th>ID</th>
                        <th>name</th>
                        <th>email</th>
                        <th>Body</th>
                    </tr>
                </table>
            </div>
        </div>
        <center><a id="main" href="/api/user/pagging/frontside"
            >Click Here To Redirect Home Page</a></center>
    </div>

    <script>

        async function fetchdata() {
            try {
                const response = await fetch(`https://jsonplaceholder.typicode.com/comments?postId=<%=id%>`);
                const records = await response.json();
                // console.log(records);
                return records;
            } catch (err) {
                console.log(err);
            }
        }

        async function getrecords() {

            let data;

            try {
                data = await fetchdata();
                console.log(typeof (data));
            } catch (err) {
                console.log(err);
            }


            const table = document.querySelector('table');

    
            data.map(element => {
                const tr = document.createElement('tr');
                
                const post_td = document.createElement('td');
                post_td.textContent = element.postId;

                const id_td = document.createElement('td');
                id_td.textContent = element.id;

                const name_td = document.createElement('td');
                name_td.textContent = element.name;

                const email_td = document.createElement('td');
                email_td.textContent = element.email;

                const body_td = document.createElement('td');
                body_td.textContent = element.body;

                tr.appendChild(post_td);
                tr.appendChild(id_td);
                tr.appendChild(name_td);
                tr.appendChild(email_td);
                tr.appendChild(body_td);


                table.appendChild(tr);

            });

        }

        getrecords();

    </script>

</body>

</html>